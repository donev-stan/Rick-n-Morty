<div class="container mt-4 mb-4">

    {{!-- Navigation Path --}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/locations/1">Location</a></li>
            <li class="breadcrumb-item"><a href="/location/{{id}}">{{location.name}}</a></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col text-white">
            <h1>Name: {{location.name}}</h1>
            <h1>Type: {{location.type}}</h1>
            <h1>Dimension: {{location.dimension}}</h1>
            <h1>Created: {{location.created}}</h1>
            <h1>Residents of this place at the moment:</h1>
        </div>
    </div>

    {{!-- Character Card --}}
    <div class="row" align="center">
        {{#each residents}}
        <div class="col-xl-6">
            <div class="card mb-3 box-shadow" style="max-width: 700px;">
                <div class="row g-0">
                    <div class="col-md-5">
                        <a href="/character/{{id}}"><img src="{{image}}" class="rounded" width="100%"
                                alt="{{name}}"></a>
                    </div>
                    <div class="col-md-7">
                        <div class="card-body text-warning">
                            <h4 class="card-title m-0 mb-1"><a href="/character/{{id}}" class="text-white">{{name}}</a>
                            </h4>
                            <p class="card-text">{{status}} - {{species}}</p>
                            <h5 class="card-text mb-1 text-muted">Last known location:</h5>
                            <p class="card-text"><a href="/location/{{location.url}}"
                                    class="text-info">{{location.name}}</a></p>
                            <h5 class="card-text mb-1 text-muted">First seen in:</h5>
                            <p class="card-text"><a href="/location/{{origin.url}}"
                                    class="text-info">{{origin.name}}</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>