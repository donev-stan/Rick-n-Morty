<div class="container mt-4 mb-4">

    {{!-- Navigation Path --}}
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="#/locations/1">Locations</a></li>
                <li class="breadcrumb-item text-warning" aria-current="page">{{location.name}}</li>
            </ol>
        </nav>
    </div>

    {{!-- Location Card --}}
    <div class="row justify-content-center mt-4 m-2">
        <div class="card text-center" style="max-width: 30rem;">
            <div class="card-header">
                {{location.type}}
            </div>
            <div class="card-body">
                <h5 class="card-title text-warning">{{location.name}}</h5>
            </div>
            <div class="card-footer text-info">
                {{location.dimension}}
            </div>
        </div>
    </div>

    {{!-- Residents --}}
    <div class="row mt-4">
        <div class="col text-center text-warning mt-4">
            <h3>Known residents of {{location.name}}:</h3>
        </div>
    </div>

    <div class="row justify-content-center">
        {{#if residents}}
        {{#each residents}}
        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="card m-3">
                <a href="#/character/{{id}}"><img src="{{image}}" class="card-img-top" alt="{{name}}"></a>
                <div class="card-body">
                    <a href="#/character/{{id}}" class="text-warning">
                        <h5 class="card-title text-reset">{{name}}</h5>
                    </a>
                    <p class="card-text">{{status}} - {{species}}</p>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <h5 class="text-center text-danger"><i> No known residents at the moment. </i></h5>
        {{/if}}
    </div>
</div>